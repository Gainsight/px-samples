<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PXBlazor</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div id="menu_home" class="nav-item px-3">
            <NavLink id="menu_home" class="nav-link" href="" Match="NavLinkMatch.All">
                <span id="menu_home" class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div id="menu_counter" class="nav-item px-3">
            <NavLink id="menu_counter" class="nav-link" href="counter">
                <span id="menu_counter" class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div id="menu_fetch" class="nav-item px-3">
            <NavLink id="menu_fetch" class="nav-link" href="fetchdata">
                <span id="menu_fetch" class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

